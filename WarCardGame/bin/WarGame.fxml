<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="WarGameController"
      prefWidth="600" prefHeight="400">
      
    <Button fx:id="startButton" text="Start Game" onAction="#startGame"/>
    <Button fx:id="nextRoundButton" text="Next Round" onAction="#playNextRound" disable="true"/>
    
</VBox>
