<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CalculatorController">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
   <children>
      <TextField fx:id="expressionDisplay" alignment="CENTER_RIGHT" editable="false" style="-fx-font-size: 14px;" />
      <TextField fx:id="display" alignment="CENTER_RIGHT" editable="false" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
      <GridPane alignment="CENTER" hgap="5" vgap="5">
         <children>
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="/" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="0" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="." GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="50" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            
            <Button mnemonicParsing="false" onAction="#handleButton" prefHeight="50" prefWidth="215" text="C" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="4" />
         </children>
      </GridPane>
   </children>
</VBox>